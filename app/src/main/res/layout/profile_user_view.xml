<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:orientation="horizontal"
            android:padding="10dp">


            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    tools:text="Nombre" />


            </RelativeLayout>

            <TextView
                android:id="@+id/profileuserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/profileuserAge"
                android:layout_alignStart="@+id/profileuserAge"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                tools:text="username" />

            <TextView
                android:id="@+id/profileuserAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/profileuserName"
                android:layout_alignLeft="@+id/profileuserEmail"
                android:layout_alignStart="@+id/profileuserEmail"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                tools:text="age" />

            <TextView
                android:id="@+id/profileuserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/profileuserAge"
                android:layout_alignLeft="@+id/relativeLayout"
                android:layout_alignStart="@+id/relativeLayout"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                tools:text="email" />

            <TextView
                android:id="@+id/profileServices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/profileuserName"
                android:layout_alignStart="@+id/profileuserName"
                android:layout_below="@+id/profileuserName"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                tools:text="services" />

            <Button
                android:id="@+id/solicitarServicioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/profileServices"
                android:layout_alignStart="@+id/profileServices"
                android:layout_below="@+id/profileServices"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible"
                tools:text="SolicitarServicio" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>